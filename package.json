{
  "name": "daisypaste",
  "version": "2.0.0",
  "description": "Modern, fast, and beautiful pastebin service with syntax highlighting",
  "keywords": [
    "pastebin",
    "code-sharing",
    "syntax-highlighting",
    "cloudflare-workers",
    "serverless",
    "paste",
    "code"
  ],
  "author": "DaisyPaste Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/daisypaste.git"
  },
  "homepage": "https://your-domain.com",
  "bugs": {
    "url": "https://github.com/your-username/daisypaste/issues"
  },
  "scripts": {
    "dev": "npx wrangler pages dev .",
    "deploy": "npx wrangler pages deploy .",
    "build": "echo 'No build step required for static files'",
    "lint": "npx eslint *.js functions/**/*.js",
    "format": "npx prettier --write *.{js,css,html,json,md}",
    "test": "echo 'Tests not yet implemented'",
    "validate": "npm run lint && npm run format",
    "serve": "npx serve -s . -p 3000"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "serve": "^14.2.3",
    "wrangler": "^3.84.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not dead"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "worker": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "globals": {
      "hljs": "readonly",
      "DaisyPaste": "writable"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "files": [
    "*.html",
    "*.css",
    "*.js",
    "*.json",
    "*.md",
    "functions/",
    "icons/",
    "sw.js",
    "robots.txt"
  ]
}