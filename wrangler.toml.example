# Wrangler Configuration Example for DaisyPaste
# Copy this to wrangler.toml and update with your values

name = "daisypaste"
compatibility_date = "2025-11-01"
workers_dev = true

# Pages configuration
pages_build_output_dir = "."

# KV Namespaces
[[kv_namespaces]]
binding = "FILES_KV"
id = "your-kv-namespace-id-here"
preview_id = "your-preview-kv-namespace-id-here"

# Environment variables (optional)
[env.production]
name = "daisypaste-production"
[[env.production.kv_namespaces]]
binding = "FILES_KV"
id = "your-production-kv-namespace-id-here"

# Development configuration
[env.development]
name = "daisypaste-dev"
[[env.development.kv_namespaces]]
binding = "FILES_KV"
id = "your-dev-kv-namespace-id-here"

# Rate limiting (if using Workers)
# [rate_limit]
# enabled = true
# max_requests = 100
# period = 60

# Build configuration
[build]
command = "echo 'No build step required'"
watch_dirs = ["functions", "*.js", "*.css", "*.html"]

# Routes (if using Workers directly)
# routes = [
#   { pattern = "paste.yourdomain.com/*", zone_name = "yourdomain.com" }
# ]